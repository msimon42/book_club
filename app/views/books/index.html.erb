<h1>Books</h1>

<% @books.each do |book| %>
  <h3><%= book.title %></h3>
  <ul>
    <li>No. of pages: <%= book.pages %></li>
    <li>Published: <%= book.publication_year %></li>
    <li>Author(s): <ul><% book.authors.each do |author| %>
      <li> <%= link_to author.name, "/authors/#{author.id}" %></li></ul></li>
      <% end %>
  </ul>
<% end %>
